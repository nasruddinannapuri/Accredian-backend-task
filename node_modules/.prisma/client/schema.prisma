datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id            Int      @id
  referrerName  String
  referrerEmail String
  refereeName   String
  refereeEmail  String
  createdAt     DateTime @default(now())

  @@unique([referrerEmail, refereeEmail]) // Prevent the same referrer from referring the same candidate twice.
  @@unique([refereeEmail]) // Optionally, a candidate cannot be referred more than once overall.
}
